<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/go_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="230dp"
        android:gravity="center"
        android:background="#0faed6"
        android:onClick="go_click"
        android:padding="30dp"
        android:text="Go"
        android:textColor="#f5fafa"
        android:textSize="100dp"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/relative_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        tools:visibility="invisible">

        <TextView
            android:id="@+id/math_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-2dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="2dp"
            android:layout_toStartOf="@+id/score_id"
            android:layout_toEndOf="@+id/timer_id"
            android:padding="5dp"
            android:text="4+5"
            android:textAlignment="center"
            android:textSize="40dp" />

        <TableLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:padding="50dp"
            android:stretchColumns="0,1,2">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="#FFFFFF">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#000000">


                </TableRow>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="#000000"

                >

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/firstans"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#3b0ef0"
                    android:onClick="clickedd"
                    android:tag="0"
                    android:text="11"
                    android:textColor="#f5fafa"
                    android:textSize="50dp"

                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/secondans"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#4e6466"
                    android:onClick="clickedd"
                    android:padding="30dp"
                    android:tag="1"
                    android:text="9"
                    android:textColor="#f5fafa"
                    android:textSize="50dp" />


            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="#000000">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/thirdans"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#d1779d"
                    android:onClick="clickedd"
                    android:padding="30dp"
                    android:tag="2"
                    android:text="5"
                    android:textColor="#f5fafa"
                    android:textSize="50dp"

                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/fourthans"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#86bf4d"
                    android:onClick="clickedd"
                    android:tag="3"
                    android:text="16"
                    android:textColor="#f5fafa"

                    android:textSize="50dp" />

            </TableRow>


        </TableLayout>

        <TextView
            android:id="@+id/timer_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="#ecf00e"
            android:padding="5dp"
            android:text="30s"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/resultunder_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"

            android:layout_marginLeft="100dp"
            android:layout_marginTop="420dp"
            android:layout_marginEnd="0dp"
            android:text=""
            android:textAlignment="center"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/score_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="4dp"
            android:background="#e05e2b"
            android:padding="5dp"
            android:text="0/0"
            android:textSize="40dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/playagain_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="560dp"
            android:background="#0faed6"
            android:onClick="playagain_click"
            android:padding="20dp"
            android:text="Play Again"
            android:textColor="#f5fafa"
            android:textSize="20dp"
            android:visibility="invisible" />
    </RelativeLayout>

</RelativeLayout>